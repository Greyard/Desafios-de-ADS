#include <stdio.h>

int main() {
    // Bispo: Diagonal superior direita
    printf("Movimento do Bispo:\n");
    for (int i = 1; i <= 5; i++) {
        printf("Diagonal: Cima + Direita (%d)\n", i);
    }

    // Torre: Direita
    printf("\nMovimento da Torre:\n");
    for (int i = 1; i <= 5; i++) {
        printf("Direita (%d)\n", i);
    }

    // Rainha: Esquerda
    printf("\nMovimento da Rainha:\n");
    int i = 1;
    while (i <= 8) {
        printf("Esquerda (%d)\n", i);
        i++;
    }

    return 0;
}
